<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:scrollHorizontally="false"
        android:text="Wealth Calculator"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:typeface="sans"
        app:fontFamily="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/portfolioId"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/wallet2"
        android:onClick="viewPortfolio"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <ImageButton
        android:id="@+id/totalsId"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="81dp"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:background="@drawable/totals2"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/portfolioId"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageButton
        android:id="@+id/chartsId"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/charts2"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:gravity="center"
        android:text="Portfolio"
        android:textColor="#FFFFFF"
        app:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/portfolioId" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:gravity="center"
        android:text="Settings"
        android:textColor="#FFFFFF"
        app:fontFamily="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsId" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:gravity="center"
        android:text="Totals"
        android:textColor="#FFFFFF"
        app:fontFamily="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalsId" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:gravity="center"
        android:text="Charts"
        android:textColor="#FFFFFF"
        app:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chartsId" />

    <ImageButton
        android:id="@+id/settingsId"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:background="#000000"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/sett" />

</androidx.constraintlayout.widget.ConstraintLayout>